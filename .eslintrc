{
  "extends": 'airbnb',
  "parser": 'babel-eslint',
  "plugins": [
      "react",
      "import"
  ],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
           "experimentalObjectRestSpread": true
      }
  },
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true
  },
  "rules": {
    'react/prefer-es6-class': 1,
    'react/jsx-pascal-case': 1,
    'react/jsx-closing-bracket-location': 1,
    'react/jsx-wrap-multilines': 1,
    'react/self-closing-comp': 1,
    'react/sort-comp': 1,
    'react/no-string-refs': 0,
    'import/prefer-default-export': 0,
    'react/forbid-prop-types': 0,
    'react/jsx-filename-extension': 0,
    'global-require': 0,
    'import/extensions': 0,
    'no-alert': 0,
    'linebreak-style': 0,
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["app/src"]
      }
    }
  },
}
